---
import PageLayout from './PageLayout.astro'

const {
  frontmatter: { title, pubDate, image }
} = Astro.props;
---

<PageLayout title={title}>
  <main>
    <article>
      <header class='mb-9'>
        <h1 class='text-2xl'>{title}</h1>
        {
          image && (
            <img
              height={360}
              src={image}
              alt=''
              class='w-half m-auto my-4'
            />
          )
        }
        <small class='block'
          >Published on: {pubDate && <time>{pubDate}</time>}</small
        >
      </header>
      <section>
        <slot />
      </section>
    </article>
  </main>
</PageLayout>
