---
import PageLayout from './PageLayout.astro'
import { Image } from 'astro:assets';

const {
  frontmatter: { title, pubDate, image }
} = Astro.props;
---

<PageLayout title={title}>
  <main>
    <article>
      <header class='mb-9'>
        <h1 class='text-2xl'>{title}</h1>
        {
          image && (
            <Image
              src={image}
          alt=''
          widths = {[240, 540, 720]}
          layout="constrained"
          width = "540"
          height = "500"
            class='my-4 m-auto'
            />
          )
          }
        <small class='block'
          >Published on: {pubDate && <time>{pubDate}</time>}</small
        >
      </header>
      <section>
        <slot />
      </section>
    </article>
  </main>
</PageLayout>
